<% include partials/header %>

<div class="container">
    <a href="/posts" class="btn btn-success float-right">back</a>
    <h1 class="tocenter">create a new post</h1>
    <div class="row">
        <div class="new-post">
            <form action="/posts" method="POST">
                <div class="form-group">
                    <p>Depart from:</p> 
                    <input class="form-control" type="text" name="newpost[departure]" placeholder="departure">
                </div>
                <div class="form-group">
                    <p>Go to:</p> 
                    <input class="form-control" type="text" name="newpost[destination]" placeholder="destination">
                </div>
                <div class="form-group">
                    <p>Departure Date:</p>
                    <div>
                        <input type="date" name="newpost[date]" class="form-control" placeholder="year/month/date">
                    </div>
                    <div>
                    </div>
                </div>
                
                <div class="form-group">
                    <p>Departure Time:</p>
                    <div class="time-slot">
                        <select class="form-control " name="newpost[time_hour]">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                        <option>6</option>
                        <option>7</option>
                        <option>8</option>
                        <option>9</option>
                        <option>10</option>
                        <option>11</option>
                        <option>12</option>
                    </select>
                    </div>
                    <div class="time-colon">
                        :
                    </div>
                    <div class="time-slot">
                        <select class="form-control" name="newpost[time_minute]">
                        <option>00</option>
                        <option>05</option>
                        <option>10</option>
                        <option>15</option>
                        <option>20</option>
                        <option>25</option>
                        <option>30</option>
                        <option>35</option>
                        <option>40</option>
                        <option>45</option>
                        <option>50</option>
                        <option>55</option>
                    </select>
                    </div>
                    <div class="time-slot">
                        <select class="form-control" name="newpost[time_apm]">
                        <option>a.m.</option>
                        <option>p.m.</option>
                    </select>
                    </div>
                </div>
                <div>
                    <p>Time Zone:</p>
                    <select class="form-control" name="newpost[timezone]">
                    <option selected>PST (-8:00)</option>
                    <option>MST (-7:00)</option>
                    <option>CST (-6:00)</option>
                    <option>EST (-5:00)</option>
                    </select>
                </div>
                <div class="form-group">
                    <p>Available Slots:</p>
                    <div>
                        <select class="form-control" name="newpost[slots]">
                          <option>1</option>
                          <option>2</option>
                          <option>3</option>
                          <option>4</option>
                          <option>5</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-center">Submit</button>
                </div>
            </form>
        </div>
    </div>
  
</div>



<% include partials/footer %>