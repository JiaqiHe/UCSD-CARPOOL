<% include ./partials/header %>

<h1 class="tocenter">Sign Up</h1>
<div class="container board">
    <form action="/register" method="POST">
        <div class="form-group">
            <label>Username:</label>
            <input type="text" class="form-control" name="username" placeholder="username">
        </div>
        <div class="form-group">
            <label>E-mail:</label>
            <input type="email" class="form-control" name="email" aria-describedby="emailHelp" placeholder="E-mail">
        </div>
        <div class="form-group">
            <label>Password:</label>
            <input type="password" name="password" placeholder="password" class="form-control">
        </div>
        <div class="form-group">
            <label>Confirm Password:</label>
            <input type="password" name="confirm" placeholder="confirm password" class="form-control">
        </div>
        <button class="btn btn-success btn-center" type="submit">Sign Up</button>
        <div class="form-group">
            <a href="/login" class="btn float-right">Already had an account? Login here!</a>
        </div>
        
    </form>
</div>


<% include ./partials/footer %>