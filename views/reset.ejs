<% include ./partials/header %>

<h1 class="tocenter">Reset Your Password</h1>
<div class="container loginboard">
    <form action="/reset/<%= token %>" method="POST">
        <div class="form-group">
            <label>Password:</label>
            <input type="password" name="password" placeholder="password" class="form-control">
        </div>
        <div class="form-group">
            <label>Confirm Password:</label>
            <input type="password" name="confirm" placeholder="confirm password" class="form-control">
        </div>
        <button class="btn btn-success btn-center" type="submit">Reset Password</button>
    </form>
</div>

<% include ./partials/footer %>